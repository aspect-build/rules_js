{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",

    "extends": [
        "config:base",
        ":preserveSemverRanges",
        ":rebaseStalePrs",
        "schedule:weekly",
        "group:recommended",
        "group:monorepos",
        "workarounds:all"
    ],

    "labels": ["cleanup", "prioritize"],
    "dependencyDashboard": true,

    "packageRules": [
        {
            "matchPackagePatterns": ["*"],
            "stabilityDays": 3
        },
        {
            "matchPackagePatterns": ["*"],
            "matchUpdateTypes": ["patch"],
            "groupName": "all patch updates",
            "groupSlug": "all-patch"
        }
    ]
}
