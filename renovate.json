{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",

    "extends": [
        "config:base",
        ":preserveSemverRanges",
        ":rebaseStalePrs",
        "schedule:weekly",
        "group:recommended",
        "group:monorepos",
        "workarounds:all"
    ],

    "labels": ["cleanup", "prioritize"],
    "dependencyDashboard": true,

    "packageRules": [
        {
            "matchPackagePatterns": ["*"],
            "stabilityDays": 3
        },
        {
            "matchPackagePatterns": ["*"],
            "matchUpdateTypes": ["patch"],
            "groupName": "all patch updates",
            "groupSlug": "all-patch"
        },
        {
            "groupName": "rollup",
            "groupSlug": "rollup",
            "matchPackageNames": ["rollup"],
            "matchPackagePatterns": ["^rollup-", "^@rollup/", "-rollup-"]
        },
        {
            "gorupName": "Webpack",
            "groupSlug": "webpack",
            "matchPackagePatterns": ["^webpack-", "^@webpack-cli/", "-webpack-"]
        },
        {
            "groupName": "Bazel rules",
            "groupSlug": "bazel_rules",
            "matchManagers": ["bazel"],
            "matchUpdateTypes": ["patch", "minor"]
        },
        {
            "groupName": "Aspect rules",
            "groupSlug": "aspect_rules",
            "matchManagers": ["bazel"],
            "matchPackagePatterns": ["^aspect_"],
            "matchUpdateTypes": ["patch", "minor"]
        }
    ]
}
