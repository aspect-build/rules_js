"BUILD file inserted into @npm_typescript repository"
load("@aspect_bazel_lib//lib:copy_directory.bzl", "copy_directory")
load("@aspect_rules_js//js:js_package.bzl", "js_package")
load("@aspect_rules_js//js:js_binary.bzl", "js_binary")
load("@bazel_skylib//rules:write_file.bzl", "write_file")

# For RBE compatibility, the package must be a TreeArtifact in bazel-out
copy_directory(
    name = "_npm_typescript",
    src = "package",
    out = "typescript",
)

js_package(
    name = "npm_typescript",
    src = "_npm_typescript",
    package_name = "typescript",
    visibility = ["//visibility:public"],
)

# Needed to address the entry_point within the typescript package
# since the js_binary implementation in rules_js doesn't support
# $(rootpath) expansions yet.
write_file(
    name = "write_tsc",
    out = "tsc.js",
    content = [
        "const {dirname} = require('path')",
        "const tsPath = dirname(require.resolve('typescript'))",
        "require(tsPath + '/tsc.js')",
    ],
)

js_binary(
    name = "tsc",
    data = ["npm_typescript"],
    entry_point = "tsc.js",
    visibility = ["//visibility:public"],
)

js_binary(
    name = "validator",
    data = ["npm_typescript"],
    entry_point = "@rules_nodejs//nodejs/private:ts_project_options_validator.js",
    visibility = ["//visibility:public"],
)
