load("@aspect_rules_js//js:defs.bzl", "js_library", "js_test")
load("@npm//:defs.bzl", "npm_link_all_packages")
load("@npm//examples/webpack_cli:webpack-cli/package_json.bzl", "bin")

npm_link_all_packages(
    name = "node_modules",
)

js_test(
    name = "test",
    data = [
        ":node_modules/mathjs",
        ":package.json",
    ],
    entry_point = "index.js",
)

js_library(
    name = "lib",
    srcs = [
        "index.js",
        "package.json",
    ],
    deps = [
        ":node_modules/mathjs",
    ],
)

bin.webpack_cli(
    name = "bundle",
    srcs = [
        "webpack.config.js",
        ":lib",
    ],
    outs = [
        "dist/main.js",
    ],
    args = [
        "--config webpack.config.js",
    ],
    chdir = package_name(),
    log_level = "debug",
)

# note: rules_nodejs yarn_install'd output_dir = True is sufficient for outputting
#
# `bazel build //examples/webpack_cli:bundle_dir`
bin.webpack_cli(
    name = "bundle_dir",
    srcs = [
        "webpack.config.js",
        ":lib",
    ],

    # Emits an `ls bazel-bin/examples/webpack_cli/bundle_dir`, but contents empty
    output_dir = True,

    # Emits an `ls bazel-bin/examples/webpack_cli/raytest`, but contents empty
    out_dirs = ["raytest"],
    args = [
        "--config webpack.config.js",
    ],
    chdir = package_name(),
    log_level = "debug",
)