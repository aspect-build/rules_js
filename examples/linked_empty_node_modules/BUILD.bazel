load("@bazel_skylib//rules:build_test.bzl", "build_test")
load("@npm//:defs.bzl", "npm_link_all_packages")
load("//js:defs.bzl", "js_library")
load("//npm:defs.bzl", "npm_package")

# Approx repro of https://github.com/aspect-build/rules_js/issues/918

npm_link_all_packages(name = "node_modules")

js_library(
    name = "lib",
    srcs = ["index.js"],
    visibility = ["//visibility:public"],
    deps = [
        ":node_modules",  # <--- this should work despite no deps and this being empty
    ],
)

# Exposed via npm_package()
npm_package(
    name = "pkg",
    srcs = [
        "package.json",
        ":lib",
    ],
    visibility = ["//visibility:public"],
)

build_test(
    name = "test",
    targets = [
        ":pkg",
        ":node_modules",
    ],
)
